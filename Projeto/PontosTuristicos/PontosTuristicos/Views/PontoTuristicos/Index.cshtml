@model IEnumerable<PontosTuristicos.Models.PontoTuristico>

@{
    ViewData["Title"] = "Index";
}

<div class="modal-header">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <img style="width: 100%;" src="~/img/logo_ponto_turistico.png" />
            </div>

            <div style="text-align: right; margin-top: 70px;" class="col-md-6">
                <a asp-action="Create" style="text-decoration: none; color: white;" class="btn btn-primary"><i class="bi bi-plus"></i> Cadastrar um ponto turístico</a>
            </div>
        </div>
    </div>
</div>

<div class="modal-body">
    <div class="col-md-12">
        <form asp-controller="PontoTuristicos" asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">Ponto Turístico</label>
                    <input type="text" name="nomePontoTuristico" class="form-control" placeholder="Informe o nome do ponto turístico" />
                </div>

                <div>
                    <button type="submit" class="btn btn-secondary" style="margin-top: 32px;"><i class="bi bi-search"></i> Buscar</button>
                </div>
            </div>
        </form>

        <br />

        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header text-white" style="background-color: purple;"><b><i class="bi bi-signpost-2"></i> Ponto Turístico</b></div>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text" style="text-align: justify;">@Html.DisplayFor(modelItem => item.Descricao)</p>
                </div>
            </div>

            <br />

            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-secondary"><i class="bi bi-eye"></i> Detalhes</a>
            <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-success"><i class="bi bi-pen"></i> Editar</a>
            <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-danger"><i class="bi bi-trash"></i> Excluir</a>

            <br /><br />
        }
        
    </div>
</div>