@model IEnumerable<PontosTuristicos.Models.PontoTuristico>

@{
    ViewData["Title"] = "Index";
}

<div class="modal-header">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <img style="width: 100%;" src="~/img/logo_ponto_turistico.png" />
            </div>

            <div style="text-align: right; margin-top: 70px;" class="col-md-6">
                <a asp-action="Create" style="text-decoration: none; color: white;" class="btn btn-primary"><i class="bi bi-plus"></i> Cadastrar um ponto turístico</a>
            </div>
        </div>
    </div>
</div>

<div class="modal-body">
    @foreach (var item in Model)
    {
        <p><b>@Html.DisplayFor(modelItem => item.Nome)</b></p>
        <p style="text-align: justify;">@Html.DisplayFor(modelItem => item.Descricao)</p>
        <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-secondary"><i class="bi bi-eye"></i> Detalhes</a>
        <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-success"><i class="bi bi-pen"></i> Editar</a>
        <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: white;" class="btn btn-danger"><i class="bi bi-trash"></i> Excluir</a>
        <br /><br />
    }

</div>